{
  "include": [
      "src/**/*"
  ],
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "allowJs": false,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  }
}
